<p id="notice"><%= notice %></p>

<h1>Listing Songs</h1>

<%= will_paginate @songs %>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Name</th>
      <th>Artist</th>
      <th>Murder</th>
      <th>Shoot</th>
      <th>Stab</th>
      <th>Kill</th>
      <th>Steal</th>
      <th>Rape</th>
      <th>Thug</th>
      <th>Trigger</th>
      <th>Gang</th>
      <th>Gun</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.date %></td>
        <td><%= song.name %></td>
        <td><%= song.artist %></td>
        <td><%= song.wordchecker[0][-1] %></td>
        <td><%= song.wordchecker[1][-1] %></td>
        <td><%= song.wordchecker[2][-1] %></td>
        <td><%= song.wordchecker[3][-1] %></td>
        <td><%= song.wordchecker[4][-1] %></td>
        <td><%= song.wordchecker[5][-1] %></td>
        <td><%= song.wordchecker[6][-1] %></td>
        <td><%= song.wordchecker[7][-1] %></td>
        <td><%= song.wordchecker[8][-1] %></td>
        <td><%= song.wordchecker[9][-1] %></td>
        <td><%= song.wordchecker[10][-1] %></td>
        <td><%= link_to 'Show', song %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Song', new_song_path %>
<%= link_to 'All Billboard Dates', billboard_dates_path %>
